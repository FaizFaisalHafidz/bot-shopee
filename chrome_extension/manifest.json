{
  "manifest_version": 3,
  "name": "Shopee Live Viewer Booster",
  "version": "1.0",
  "description": "Boost Shopee Live viewer count automatically",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  
  "host_permissions": [
    "https://live.shopee.co.id/*",
    "https://shopee.co.id/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["https://live.shopee.co.id/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["https://live.shopee.co.id/*"]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'unsafe-inline'; object-src 'self';"
  }
}
